---
import { Image } from 'astro:assets';

export interface Props {
  title: string;
  url: string;
  description: string;
  pubDate: string;
  author: string;
  image: ImageMetadata;
  readingTime: number;
}

const { title, url, description, pubDate, author, image, readingTime } = Astro.props;
---

<li>
  <a href={url} title={title} class="group">
    <article class="flex-1 h-full flex flex-col bg-black">
      <div class="block w-full lg:col-span-2">
        <div class="aspect-square md:aspect-[384/246] relative overflow-hidden">
          <Image
            src={image}
            alt={title}
            width={384}
            height={246}
            class="absolute inset-0 w-full h-full object-cover"
            loading="lazy"
          />
        </div>
      </div>
      <div class="flex flex-col items-start justify-between flex-1 w-full p-8">
        <div class="w-full">
          <div>
            <p class="font-medium text-white link-icon">{title}</p>
          </div>
          <p class="mt-2 text-sm text-zinc-400 line-clamp-3">
            {description}
          </p>
        </div>
        <div>
          <div class="inline-flex flex-col mt-6 space-y-1">
            <div class="inline-flex space-x-1 items-center">
              <p class="text-xs font-medium text-white">
                {author}
              </p>
              <span aria-hidden="true">&middot;</span>
              <div class="flex text-xs text-zinc-500">
                <time datetime={pubDate}>{pubDate}</time>
              </div>
            </div>
            <div class="text-xs text-zinc-500 block">
              {readingTime} min read
            </div>
          </div>
        </div>
      </div>
    </article>
  </a>
</li>

