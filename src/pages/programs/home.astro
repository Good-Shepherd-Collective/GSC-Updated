---
// src/pages/programs/home.astro

import ProgramEntries from "@/components/programs/ProgramEntries.astro";
import { getCollection } from "astro:content";
const allPosts = await getCollection("programs");
import BaseLayout from "@/layouts/BaseLayout.astro";
console.log(allPosts);
---

<BaseLayout>
  <section class="md:px-12 sm:px-8">
    <div class="border-x border-zinc-800 divide-y divide-zinc-800">
      <div class="grid grid-cols-1 lg:grid-cols-2 bg-zinc-800 gap-px">
        <div class="p-8 lg:px-10 bg-red-600 gradient-grid">
          <h2
            class="text-5xl tracking-wide font-bold md:text-6xl text-white">
            Our Programs
          </h2>
        </div>
        <div class="flex flex-col gap-px bg-black">
          {
            allPosts.map((post) => (
              <ProgramEntries
                url={"/programs/" + post.slug}
                program={post.data.program}
              />
            ))
          }
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
