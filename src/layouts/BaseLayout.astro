---
// src/layouts/BaseLayout.astro
import BaseHead from "@/components/BaseHead.astro";
import Navigation from "@/components/global/Navigation.astro";
import Footer from "@/components/global/Footer.astro";

export interface Props {
  isBlogPost?: boolean;
}

const { isBlogPost } = Astro.props;
---

<html lang="en" class="selection:text-black selection:bg-white">
  <head>
    <BaseHead />
  </head>
  <body class={`${isBlogPost ? 'bg-white text-black' : 'bg-black text-white'} 2xl:max-w-7xl mx-auto font-mono`}>
    <Navigation isBlogPost={isBlogPost} />
    <slot />
    <Footer isBlogPost={isBlogPost} />
  </body>
</html>
