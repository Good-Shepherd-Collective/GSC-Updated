---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout>
  <section class="md:px-12 sm:px-8">
    <div class="border-x border-zinc-800 divide-y divide-zinc-800">
      <div class="p-8 lg:px-10">
        <p class="text-white">{frontmatter.pubDate.toString().slice(0, 10)}</p>
        <h1 class="text-4xl md:text-6xl xl:text-7xl text-white">
          {frontmatter.page}
        </h1>
      </div>
      <div class="p-8 lg:px-10">
        <div class="max-w-xl">
          <div class="prose-styles">
            <slot />
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
